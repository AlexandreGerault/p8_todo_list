{% set map = {
    'blue': {'classes': 'text-white bg-blue-600 hover:bg-blue-700 focus:ring-blue-500'},
    'red': {'classes': 'text-white bg-red-600 hover:bg-red-700 focus:ring-red-500'},
    'green': {'classes': 'text-white bg-green-600 hover:bg-green-700 focus:ring-green-500'},
    'orange': {'classes': 'text-white bg-orange-600 hover:bg-orange-700 focus:ring-orange-500'},
} %}

<a href="{{ this.href }}" class="{{ map[this.color].classes }}inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2">
    {{ this.text }}
</a>
